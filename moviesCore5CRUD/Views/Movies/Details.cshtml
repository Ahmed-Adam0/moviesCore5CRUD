@model movie

@{
    ViewData["Title"] = Model.Title;
}
<div class="row">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.poster))"class="img-thumnail"alt="@Model.Title"/> 
    </div>
    <div class="col-md-7">
        <h3>@Model.Title</h3>
        <span>
            <i class="bi bi-star-fill text-warning"></i>
            <span class="text-muted">@Model.Rate.ToString("0.0")</span>
        </span>
        <span class="text-muted">
            <i class="bi bi-calendar-week"></i>
            @Model.year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genera.name
        </span>
        <p>@Model.StoreLine</p>
    </div>
  
</div>