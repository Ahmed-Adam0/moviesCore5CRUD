@model IEnumerable<movie> 
@{
    ViewData["Title"] = "Movies";
}
<h2>
    <i class="bi bi-film"></i>
    Movies
</h2>
<hr />
<a class="btn btn-primary" asp-action="Create"><i class="bi bi-patch-plus"></i> Add Movies</a>
<div class="mt-4">
     @if(!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No Movies Found!
        </div>
    }else
    {
        <div class="row">
            @foreach(var move in Model)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2 poster" style="background-image:url(data:image/*;base64,@(Convert.ToBase64String(move.poster)))">
                              
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                  <div>
                                        <h5 class="card-title">@move.Title (@move.year)</h5>
                                        <p class="card-text text-justify ">@(move.StoreLine.Length >500? $"{move.StoreLine.Substring(0,500)}..." :move.StoreLine)</p>
                                  </div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-2"><small class="text-muted"><i class="bi bi-star-fill text-warning"></i> @move.Rate.ToString("0.0")</small></p>
                                        <div >
                                            <a asp-action="Details" asp-route-id="@move.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-camera-reels"></i>
                                                  Details
                                            </a>
                                            <a asp-action="Edite" asp-route-id="@move.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                                Edite
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@move.Id" class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
            }
        </div>  
    }
</div>